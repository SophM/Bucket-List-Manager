{{!-- main container --}}
<div class="container">

    {{!-- jumbotron for the header --}}
    <div class="row">
        <div class="col-sm-12">
            <div id="header" class="jumbotron text-center p-2 mb-1">
                <h1 class="display-3 font-weight-bold text-header"> -- One Day -- </h1>
                <h1 class="font-weight-bold text-header">a bucket-list manager</h1>
            </div>   
        </div>
    </div>

    {{!-- form to enter the things the user wishes to do --}}
    <div class="row mt-4">
        <div class="col-sm-12">
             <form>
                <div class="form-group mb-1">
                    <label for="thing">Before I die, I want to...</label>
                    <input type="text" class="form-control" id="thing" required>
                </div>
                <button id="add-btn" type="submit" class="btn pt-0 float-right">Add it!</button>
            </form>
        </div>
    </div>

    {{!-- card for the things that haven't been done yet --}}
    <div class="row mt-4">
        <div class="col-sm-12">
            <div class="card">
                <div id="head-survey" class="card-header">What I will do</div>
                <div id="things-to-do" class="card-body">
                    <ul class="list-group">
                        {{#each bucketLists}}
                            {{#unless done}}
                                {{> things/thing-block notDone=true}}
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div> 
        </div>
    </div>

    {{!-- card for the things that have been done --}}
    <div class="row mt-3">
        <div class="col-sm-12">
            <div class="card">
                <div id="head-survey" class="card-header">What I have done</div>
                <div id="things-to-do" class="card-body">
                    <ul class="list-group">
                        {{#each bucketLists}}
                            {{#if done}}
                                {{> things/thing-block notDone=false}}
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div> 
        </div>
    </div>

</div>